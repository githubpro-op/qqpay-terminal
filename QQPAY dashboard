    function toggleSection(id){  
      document.querySelectorAll(".section").forEach(s=>s.classList.remove("active"));  
      document.querySelectorAll("nav button").forEach(b=>b.classList.remove("active"));  
      const sec=document.getElementById(id);  
      if(sec && !sec.classList.contains("active")){ sec.classList.add("active"); event.target.classList.add("active"); }  
      else if(sec){ sec.classList.remove("active"); }  
    }  
  
    function toggleNotifications(){  
      const box=document.getElementById("notifBox");  
      box.style.display=(box.style.display==="block")?"none":"block";  
    }  
  
    function openNotifDetail(text){  
      document.getElementById("notifText").textContent=text;  
      document.getElementById("notifDetail").style.display="block";  
    }  
    function closeNotifDetail(){  
      document.getElementById("notifDetail").style.display="none";  
    }  
  
    function logoutConfirm(){  
      if(confirm("Are you sure you want to logout?")){  
        window.location.href="/login";  
      }  
    }  
  
    function updateTime(){  
      const opts={hour:'2-digit',minute:'2-digit',second:'2-digit',day:'2-digit',month:'short',year:'numeric'};  
      document.getElementById("dateTime").textContent=new Intl.DateTimeFormat('en-GB',opts).format(new Date());  
    }  
    setInterval(updateTime,1000); updateTime();  
  
    // Users Online random fluctuation  
    let baseUsers=Math.floor(3000+Math.random()*2000);  
    function updateUsers(){  
      const change=Math.floor((Math.random()*400)+100);  
      baseUsers+=Math.random()>0.5?change:-change;  
      if(baseUsers<3000) baseUsers=3000;  
      if(baseUsers>5000) baseUsers=5000;  
      document.getElementById("onlineUsers").textContent=baseUsers;  
    }  
    setInterval(updateUsers,1000); updateUsers();  
  
    // Exchange Rates random change  
    function updateRates(){  
      const usdt=(96+Math.random()*2).toFixed(2);  
      const qqcoin=(0.5+Math.random()*0.1).toFixed(2);  
      const usdtUp=Math.random()>0.5;  
      const qqcoinUp=Math.random()>0.5;  
      document.getElementById("usdt").textContent=usdt;  
      document.getElementById("usdtArrow").textContent=usdtUp?"‚ñ≤":"‚ñº";  
      document.getElementById("usdtArrow").className=usdtUp?"up":"down";  
      document.getElementById("qqcoin").textContent=qqcoin;  
      document.getElementById("qqcoinArrow").textContent=qqcoinUp?"‚ñ≤":"‚ñº";  
      document.getElementById("qqcoinArrow").className=qqcoinUp?"up":"down";  
    }  
    setInterval(updateRates,1000); updateRates();  
  
    // QQCHAT  
    function toggleQQChat(){   
      const box=document.getElementById('qqchatBox');   
      box.style.display=(box.style.display==='block')?'none':'block';   
    }  
    function sendQQChat(){  
      const inp=document.getElementById('qqchatInput');  
      const body=document.getElementById('qqchatBody');  
      if(!inp.value.trim()) return;  
      body.innerHTML+='<div><b>You:</b> '+inp.value+'</div>';  
      const replies=['I am checking that for you.','Please wait, system updating...','Sure, bonus credited!','Bank linked successfully.','Your request is under process.','Would you like help withdrawing?'];  
      const reply=replies[Math.floor(Math.random()*replies.length)];  
      setTimeout(()=>{ body.innerHTML+='<div><b>QQCHAT:</b> '+reply+'</div>'; body.scrollTop=body.scrollHeight; },1000);  
      inp.value='';  
    }  
  
    // QQCHAT auto message  
    setInterval(()=>{  
      const body=document.getElementById('qqchatBody');  
      const msgs=['How may I help you?','Need help withdrawing?','Want to check your bonus?','Your agent is online.'];  
      const msg=msgs[Math.floor(Math.random()*msgs.length)];  
      body.innerHTML+='<div><b>QQCHAT:</b> '+msg+'</div>';  
      body.scrollTop=body.scrollHeight;  
    },15000);  
  // TOAST FUNCTION
    function showToast(msg,color){
      const box=document.getElementById('toastBox');
      if(!box) return;
      const toast=document.createElement('div');
      toast.textContent=msg;
      toast.style.cssText=
        'background:#111;padding:12px 18px;border-radius:8px;color:'+color+
        ';font-weight:bold;box-shadow:0 0 12px '+color+'aa;animation:slideIn .5s,fadeOut 3s forwards;';
      box.appendChild(toast);
      setTimeout(()=>toast.remove(),3000);
    }
    (function(){
      var s=document.createElement('style');
      s.textContent='@keyframes slideIn{from{opacity:0;transform:translateX(100%);}to{opacity:1;transform:translateX(0);}}@keyframes fadeOut{to{opacity:0;transform:translateX(100%);}}';
      document.head.appendChild(s);
    })();</script>  </body>  
